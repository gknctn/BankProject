@model BankProject.EntityLayer.Concrete.AppUser
@{
    Layout = "~/areas/customerpanel/views/shared/_customerpanellayout.cshtml";
}
<p>Detail page</p>

<form method="post">
    <label asp-for="UserName"> Kullanıcı adı</label>
    <input class="form-control" asp-for="UserName" disabled />

    <label asp-for="Name">Ad</label>
    <input class="form-control" asp-for="Name" disabled />

    <label asp-for="Surname">Soyad</label>
    <input class="form-control" asp-for="Surname" disabled />

    <label asp-for="Email">E-mail</label>
    <input class="form-control" asp-for="Email" disabled />

    <label asp-for="PhoneNumber">Telefon numarası</label>
    <input class="form-control" asp-for="PhoneNumber" disabled />

    <label asp-for="ImageUrl">Resim yolu</label>
    <input class="form-control" asp-for="ImageUrl" disabled />

    <label asp-for="City">Şehir</label>
    <input class="form-control" asp-for="City" disabled />

    <label asp-for="District">Semt</label>
    <input class="form-control" asp-for="District" disabled />

    <br />
</form>
<a asp-action="ProfileEdit" asp-controller="UserProfile" asp-area="CustomerPanel" class="btn btn-primary">Bilgilerimi güncelle</a>